<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddProductActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/pink">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_home_white"
            android:background="@null"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/searchRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/relativeLayout">


        <TextView
            android:id="@+id/filteredOrdersTv"
            android:layout_width="300dp"
            android:layout_height="42.5dp"
            android:text="Showing All Orders"
            android:paddingTop="12dp"
            android:textColor="#4a524c"
            android:paddingLeft="10dp"
            android:background="@drawable/shape_rect_08"/>

        <ImageButton
            android:id="@+id/filterOrderBtn"
            android:layout_toRightOf="@+id/filteredOrdersTv"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="42.5dp"
            app:srcCompat="@drawable/ic_baseline_sort_24"
            android:background="@drawable/shape_round_02"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchRl"
        android:padding="10dp"
        android:id="@+id/ordersRv"
        app:reverseLayout="true"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:listitem="@layout/row_orders"/>


</RelativeLayout>