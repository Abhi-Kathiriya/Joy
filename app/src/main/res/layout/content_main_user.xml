<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main_user">

    <RelativeLayout
        android:id="@+id/searchRl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp">


        <EditText
            android:id="@+id/searchEt"
            android:layout_width="300dp"
            android:layout_height="42.5dp"
            android:hint="Search"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:drawablePadding="5dp"
            android:paddingLeft="8dp"
            android:background="@drawable/shape_rect_08"/>

        <ImageButton
            android:layout_toRightOf="@+id/searchEt"
            android:layout_marginLeft="10dp"
            android:layout_width="45dp"
            android:layout_height="42.5dp"
            android:src="@drawable/ic_baseline_search_white"
            android:background="@drawable/shape_round_02"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_shopify_24"
        android:layout_below="@+id/searchRl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shops around you"
        android:layout_below="@+id/searchRl"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="6dp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_04"
        android:elevation="10dp"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shopRv"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/row_shop"/>

         </LinearLayout>


        </RelativeLayout>

</ScrollView>

</RelativeLayout>